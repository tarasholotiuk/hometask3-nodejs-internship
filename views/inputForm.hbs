<h2>Add new task</h2>
<form action="/addToDo" method="POST">
	<div id='input-form'>
		<input id="name-input" placeholder="Name" name="name"></input>
		<div class="created"></div>
		<select id="category-list" name="category">
			<option disabled selected>Choose category</option>
			{{#each categories}}
				<option name={{this}}>{{this}}</option>
			{{/each}}
		</select>
		<input id="content-input" placeholder="Content" name="content"></input>
		<button type="submit"
			class="button-create-task"
			style="top: 50px; right: -70px;"
			id="button-create-task"
			value="Create Task" href="/"
		>Create Task</button>
	</div>
	<div style="margin-top: 100px;">{{error}}</div>
</form>
